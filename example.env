# Server configuration
HTTP_HOST=127.0.0.1
HTTP_PORT=8080

# CORS settings (allowed origins)
CORS_ORIGIN=http://localhost:3000

# File storage directory
IMAGE_DIR=./uploads/

# Database configuration (PostgreSQL)
POSTGRES_URL=postgres://username:password@localhost:5432/dbname

# Redis configuration
REDIS_URL=localhost:6379

# Verification code expiration time
VERIFY_CODE_EXPIRED_IN=5m

# PayKeeper payment gateway credentials
PAY_KEEPER_USER=admin
PAY_KEEPER_PASS=your_secure_password
PAY_KEEPER_SERVER=https://your.server.paykeeper.ru

# Email SMTP configuration
SMTP_TEMPLATE_PATH=./templates/email/
SMTP_HOST=smtp.yourdomain.com
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_email_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_PORT=587

# JWT Access Token configuration
ACCESS_TOKEN_PRIVATE_KEY=your_private_key_here
ACCESS_TOKEN_PUBLIC_KEY=your_public_key_here
ACCESS_TOKEN_EXPIRED_IN=60m  # 60 minutes
ACCESS_TOKEN_MAX_AGE=60      # 60 minutes (for cookies)

# JWT Refresh Token configuration
REFRESH_TOKEN_PRIVATE_KEY=your_private_key_here
REFRESH_TOKEN_PUBLIC_KEY=your_public_key_here
REFRESH_TOKEN_EXPIRED_IN=168h  # 7 days
REFRESH_TOKEN_MAX_AGE=10080    # 7 days in minutes
